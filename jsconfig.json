{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ],
            "style/*": [
                "./src/style/*"
            ],
            "script/*": [
                "./src/script/*"
            ],
            "utils/*": [
                "./src/script/utils/*"
            ],
            "vendor/*": [
                "./src/script/vendor/*"
            ],
            "webgl/*": [
                "./src/script/webgl/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "public",
        "dist",
        ""
    ]
}
